<%- include('partials/header'); %>

<div class="container-contact100">
    <div class="wrap-contact100 center">

        <form class="contact100-form" action="/compose" method="POST">
          <span class="contact100-form-title">
              Създаване
          </span>
      
          <div class="wrap-input100">
            <label class="label-input100" for="exampleFormControlInput1">Заглавие</label>
            <input type="text" class="input100" id="exampleFormControlInput1" name="postTitle">
            <span class="focus-input100"></span>
          </div>
      
          <div class="wrap-input100">
            <label class="label-input100" for="exampleFormControlTextarea1">Текст</label>
            <textarea class="input100" id="exampleFormControlTextarea1" rows="5" name="postContent"></textarea>
            <span class="focus-input100"></span>
          </div>
          
          <div class="container-contact100-form-btn">
              <div class="wrap-contact100-form-btn">
                <div class="contact100-form-bgbtn"></div>
                <button type="submit" class="contact100-form-btn">
                  <span>
                      Публикуване
                    <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                  </span>
                </button>
              </div>
            </div>
      
        </form>
    </div>
</div>

<%- include('partials/footer'); %>