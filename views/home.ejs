<%- include('partials/header'); -%>

<h1>Здравейте и добре дошли в моя блог</h1>

<p><%= startingContent %></p>

<% if (posts.length > 0) { %>

    <% posts.forEach((post) => { %>

        <h1><%= post.title %></h1>
        <p>
            <%= post.content.substring(0, 200) + ' ... ' %>
            <a href="/posts/<%= post.title %>">Прочети повече</a>
        </p>

    <% })
    } else { %>

    <h1>Няма постове!</h1>
<% } %>



<%- include('partials/footer'); -%>