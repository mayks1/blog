<%- include('partials/header'); -%>

<h1 class="page-title">Здравейте и добре дошли в моя блог</h1>

<p class="post-content"><%= startingContent %></p>

<% if (posts.length > 0) { %>

    <% posts.forEach((post) => { %>

        <h1 class="posts-title"><%= post.title %></h1>
        <p class="posts-content">
            <%= post.content.substring(0, 200) + ' ... ' %>
            <a href="/posts/<%= post.url %>">Прочети повече</a>
        </p>

    <% })
    } else { %>

    <h1>Няма постове!</h1>
<% } %>



<%- include('partials/footer'); -%>